@{
    ViewData["Title"] = "Home Page";
}


@model IEnumerable<Spotify.Services.Album>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    Welcome, @TempData["Username"]
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Link</th>
        </tr>
        @foreach (var albums in Model)
        {
            <tr>
                <td>@albums.title</td>
                <td>@albums.artist</td>
                <td><iframe src="@albums.link" width="400" height="200" allowtransparency="true" allow="encrypted-media"></iframe></td>
                <td>@Html.ActionLink("Edit", "Edit", new { id = albums.id })</td>
                <td>@Html.ActionLink("Delete", "Delete", new { id = albums.id })</td>
            </tr>
        }
        <tr>
            @using (Html.BeginForm("Insert", "home"))
            {


                <td style="width: 150px">
                    Title:<br />
                    <input type="text" name="txtTitle" Width="140" />
                </td>
                <td style="width: 150px">
                    Artist:<br />
                    <input type="text" name="txtArtist" Width="140" />
                </td>
                <td style="width: 150px">
                    Link:<br />
                    <input type="text" name="txtLink" Width="140" />
                </td>
                <td style="width: 150px">
                    <button name="btnInsert" Text="Add Album" OnClick="Insert" Width="140" Height="140"> </button>
                </td>

            }
        </tr>

    </table>

</body>
</html>
